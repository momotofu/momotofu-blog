.NavigationBar
  &-spacer
    height 44pt
    position absolute
    top 0
    @media screen and (max-width: 435pt)
        bottom 0
  &-container
    display flex
    background -moz-linear-gradient(top, rgba(13,3,26,1) 26%, rgba(13,3,26,0.97) 31%, rgba(13,3,26,0.62) 99%, rgba(13,3,26,0.61) 100%)
    background -webkit-linear-gradient(top, rgba(13,3,26,1) 26%,rgba(13,3,26,0.97) 31%,rgba(13,3,26,0.62) 99%,rgba(13,3,26,0.61) 100%)
    background linear-gradient(to bottom, rgba(13,3,26,1) 26%,rgba(13,3,26,0.97) 31%,rgba(13,3,26,0.62) 99%,rgba(13,3,26,0.61) 100%)
    opacity .9
    align-items center
    justify-content center
    font-weight bold
    border-top 2px solid #FFFC69
    border-bottom 2px solid #FFFC69
    color #EA0BFF
    position fixed
    height inherit
    width 100%
    z-index 10

