@import "../../root-styles/color.styl"

.ContactPage
  &-container
    display flex
    justify-content center
    margin-bottom 6rem

  &-form
    display flex
    flex-direction column
    max-width 497px
    width 100%

    &-input
      height 4rem
      border none
      font-size 16px
      padding 1rem
      box-sizing border-box
      background white
      display flex

      &-items
        border 1px solid rust
        &-content
          display flex
          height 4rem
          position relative
          &:before
            background pink
            content ''
            height 1px
            position absolute
            left 1.5rem
            width calc(100% - 1.5rem )
          &-label
            display flex
            align-items center
            font-weight bold
            min-width 5rem
            padding 1.5rem
          &-input
            background black
            padding 1.5rem
            width 100%
            outline none
            text-align right
            border none
          &:first-child
            border-top-left-radius 2px
            border-top-right-radius 2px
            &:before
              content none
          &:last-child
            border-bottom-right-radius 2px
            border-bottom-right-radius 2px

      &-message
        resize none
        height 12rem
        margin 1.5rem 0

      &-button
        cursor pointer