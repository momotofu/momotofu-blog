.BlogPost-hero
  &-container
    display flex
    align-items center
    flex-direction column
    width 100%
    max-width 497px
    margin-bottom 3rem
    box-sizing border-box
    @media screen and (max-width: 600px)
      padding 0 3rem
    @media screen and (max-width: 440px)
      padding 0 1.5rem

  &-wrapper
    border-radius 1px
    width 100%
    min-height 300px
    background #F7FCFF
    margin-bottom .5rem

  &-attribution
    text-align left
    font-size 12px
    align-self flex-start
    opacity .7
