&-signifier
  color #F7FCFF
  cursor pointer
  font-size 13px
  font-weight 400
  letter-spacing 0.06em
  margin-right 3rem
  opacity .8
  text-decoration none
  text-transform uppercase
  word-spacing 1px
  transition all .26s ease
  outline none
  &:hover
    color #FF7D4F
  &:active
    color #AA523C
    transition all .05s ease
  &-active
    border-right 2px solid #C6C9CE
    border-radius 2px
    color #FFFC69
    opacity 1
    padding-right 3rem
    transition all .5s ease
    transition color 0